<% layout('layout') -%>
<div class="span12" id="brands">
  <h1>All Companies and Brands</h1>
  <% if (alert) { %>
  <div class="alert alert-danger">
    <p><b>Error</b>: could not find the brand <b><%= alert %></b>. You will find
    the complete list of available brands below.</p>
  </div>
  <% } %>
  <% if (error) { %>
  <div class="alert alert-danger">
    <p><%= error %></p>
  </div>
  <% } else { %>
  <ul>
    <% for (var ic=0; ic<companies.length; ic++) { %>
    <li>
      <%= companies[ic].name %>
      <ul>
        <% for (var ib=0; ib<companies[ic].brands.length; ib++) {
          brand = companies[ic].brands[ib]; %>
        <li>
          <a href="/brands/<%= brand.name %>"><%= brand.name %></a>
        </li>
        <% } %>
      </ul>
    </li>
    <% } %>
  </ul>
  <% } // end of else %>